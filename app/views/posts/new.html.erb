<div class="add-post-form">
    <div class="page-title">
        <h1>Add new post</h1>
    </div>

    <%= form_with model: @post, url: user_posts_path(@user) do |form| %>
        <div class="form">
            <div class="title">
                <label for="title">Title</label>
                <%= form.text_field :title, required: true, placeholder: "Enter title" %>
            </div>

            <div class="description">
                <label for="description">Post Description</label>
                <%= form.text_area :description, required: true, placeholder: "Enter post details" %>
            </div>

            <div class="submit">
                <%= form.submit "Create Post" %>
            </div>
        </div>
    <% end %>    
</div>