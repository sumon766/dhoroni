<div class="user-details">
    <div class="details">
        <div class="user-image">
            <%= image_tag(@user.image, class: 'img') %>
        </div>
        <div class="name">
            <h2><%= @user.name %></h2>
            <h5>Number of posts: <%= @user.posts_counter %></h5>
        </div>
    </div>
    <div class="bio">
        <h3>Bio</h3>
        <p><%= @user.bio %></p>
    </div>

    <% @user.recent_posts.each do |post| %>
        <div class="recent-posts">
            <%= link_to post.title, user_post_path(@user, post) %>
            <p><%= post.description %></p>
            <div class="like-comment">
                <span class="comment">Comments: <%= post.comments_counter %></span> 
                <span class="like"span>Likes: <%= post.likes_counter %></span>
            </div>
        </div>
    <% end %>

    <div class="see-posts">
        <a href="/users/<%= @user.id %>/posts" id="user-btn">See all posts</a>
    </div>
</div>