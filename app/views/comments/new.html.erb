<div class="comment-form">
  <div class="page-title">
    <h2>Post your thoughts</h2>
  </div>

  <%= form_with model: @comment, url: user_post_comments_path(@user, @post) do |form| %>
    <div class="form">
      <div class="comment">
        <%= form.text_field :comment, required: true, placeholder: "Enter your comment" %>
      </div>
      <div class="submit">
        <%= form.submit "Submit" %>
      </div>
    </div>
  <% end %>
</div>
