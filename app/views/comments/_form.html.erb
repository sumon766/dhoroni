<%= form_with model: [@current_user, @post, Comment.new], url: user_post_comments_path(@current_user, @post), class: 'comment_form' do |form| %>
    <div class="form">
      <%= form.text_area :comment, class: 'form-control comment_input', placeholder: 'Enter your comment' %>
        <% form.object.errors.full_messages_for(:comment).each do |message| %>
        <div class="error-message"><%= message %></div>
      <% end %>
    </div>
    <%= form.submit 'Submit' %>
<% end %>